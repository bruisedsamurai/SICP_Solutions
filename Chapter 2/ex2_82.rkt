(define (reduce combiner null-value sequence)
  (if (null? sequence)
      null-value
      (combiner (car sequence)
                (reduce combiner null-value (cdr sequence)))))

(define (filter pred lst)
  (cond
    ((null? lst) '())
    ((pred (car lst)) (cons (car lst) (filter pred (cdr lst))))
    (else (filter pred (cdr lst)))))


(define (attach-tag type-tag contents)
  (cond ((number? contents) contents)
        (else (cons type-tag contents))))

(define (type-tag datum)
  (cond ((pair? datum) (car datum))
        ((number? datum) 'scheme-number)
        (else (error "Bad tagged datum: 
              TYPE-TAG" datum))))

(define (contents datum)
  (cond ((pair? datum) (cdr datum))
        ((number? datum) datum)
        (else (error "Bad tagged datum: CONTENTS" datum))))


(define (identity x) x)


(define (apply-generic op . args)
  (display (cons op args))
  (newline)
  (let ((type-tags (map type-tag args)))
    (let ((proc (get op type-tags)))
      (define (coerce-generic type1 rest-tags)
        (let ((tx->t1 (map (lambda (t2) (if (eq? type1 t2) identity (get-coercion t2 type1))) type-tags)))
          (if (reduce (lambda (x y) (and x y)) #t tx->t1)
              (apply apply-generic (cons op (map (lambda (x y) (x y)) tx->t1 args)))
              (if (eq? (car rest-tags) '())
                  (error
                   "No method for these types"
                   (list op type-tags))
                  (coerce-generic (car rest-tags) (cdr rest-tags))
                  )
              ))
        )
      (if proc
          (apply proc (map contents args))
          (coerce-generic (car type-tags) (cdr type-tags))))))


